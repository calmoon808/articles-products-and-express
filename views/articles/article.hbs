<form action="/{{type}}/{{urlTitle}}?_method=DELETE" method="POST" name="form">
    <input type="submit" value="Delete Article">
</form>
<button onclick="window.location.href='/articles/new';">Add Article</button>
<div class = 'index'>     
    <h2>Title: {{article.title}}</h2>
    <div>Author: {{article.author}}</div>
    <div>Article: {{article.body}}</div>
</div>
<button onclick="window.location.href='/articles/{{urlTitle}}/edit';">Edit Article</button>
<button onclick="window.location.href='/articles';">Back</button>